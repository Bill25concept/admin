<div class='row'>
    <div class='col-md-4'>
        {{#link-to "principal.commands" principal}}
            {{principal.id}}
        {{/link-to}}
    </div>
    <div class='col-md-2'>
        {{#if view.editing}}
            {{view Ember.TextField valueBinding="principal.name" classNames="col-md-2"}}
        {{else}}
            {{principal.name}}
        {{/if}}
    </div>

    <div class='col-md-1'>{{principal.type}}</div>
    <div class='col-md-2 hidden-xs hidden-sm' {{bind-attr class="view.lastConnectionClass"}}>{{principal.lastConnectionString}}</div>
    <div class='col-md-3 hidden-xs hidden-sm'>{{principal.last_ip}}</div>
</div>
