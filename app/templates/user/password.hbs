<div class="container" style='margin-top: 25px;'>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h3>CHANGE PASSWORD</h3>
        
        <form role="form">

          <div class="form-group">
            <label for="password">Current Password</label>
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              {{input value=currentPassword type='password' classNames='form-control' id='currentPassword'}}
            </div>
          </div>

          <div class="form-group">
            <label for="password">New Password</label>
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              {{input value=newPassword type='password' classNames='form-control' id='newPassword'}}
            </div>
          </div>

          <div class="form-group">
            <label for="password">Repeat New Password</label>
            <div class="input-icon">
              <i class="fa fa-lock"></i>
              {{input value=repeatNewPassword type='password' classNames='form-control' id='repeatNewPassword'}}
            </div>
          </div>

          <button {{action changePassword}} class='btn green'>Change password</button>
        </form>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>