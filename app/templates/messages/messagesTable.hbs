<div class="container">
    <div class="row">
        <div class="span3">
            <h4>MESSAGES</h4>
        </div>
        <div class="span7"></div>
        <div class="span1">
            {{#if controller.hasPreviousPage}}
                <a {{bindAttr href="previousPageUrl"}} class="btn">
                    <strong>PREVIOUS</strong>
                </a>
            {{/if}}
        </div>
        <div class="span1">
            {{#if controller.fullPage}}
                <a {{bindAttr href="nextPageUrl"}} class="btn">
                    <strong>NEXT</strong>
                </a>
            {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="span2"><strong>TIMESTAMP</strong></div>
        <div class="span2"><strong>FROM</strong></div>
        <div class="span2"><strong>TO</strong></div>
        <div class="span1"><strong>TYPE</strong></div>
        <div class="span5"><strong>BODY</strong></div>
    </div>

{{#each message in view.content}}

    <div class="row">
        <div class="span2">{{message.timestampString}}</div>
        <div class="span2">{{message.fromName}}</div>
        <div class="span2">{{message.toName}}</div>
        <div class="span1">{{message.type}}</div>
        <div class="span5">
            {{#if message.isImage}}
                <img {{bindAttr src="message.bodyUrlWithAccessToken"}} width="320" height="240" />
            {{else}}
                {{message.bodyJSON}}
            {{/if}}
        </div>
    </div>

{{/each}}

</div>
