    <div class='container'>
        <div class='row'>
            <div class='col-md-2'></div>
            <div class='col-md-8'>
                <div class="alert alert-danger">
                    <center>{{App.flash}}</center>
                </div>
            </div>
            <div class='col-md-2'></div>
        </div>
    </div>
{{/if}}

