<div class="container">

    {{#each message in controller}}

    <div class="row">
        <div class="span3">
            {{message.timestampString}}
        </div>
        <div class="span3">
            {{message.from}}
        </div>
        <div class="span1">
            {{message.message_type}}
        </div>
        <div class="span5">
            {{#if message.isImage}}
                <img {{bindAttr src="message.bodyUrlWithAccessToken"}} width="320" height="240" />
            {{/if}}
            {{#if message.isLog}}
                {{message.body.severity}}: {{message.body.message}}
            {{/if}}
        </div>
    </div>

    {{/each}}

</div>
