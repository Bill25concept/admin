<table class="table">
    <tr>
        <th>Timestamp</th>
        <th>Created</th>
        <th>From</th>
        <th>Type</th>
        <th>Body</th>
    </tr>

    {{#each message in controller}}

        {{#if message.isNotHeartbeat}}
        <tr>
            <td>
                {{message.timestampString}}
            </td>
            <td>
                {{message.createdAtString}}
            </td>
            <td>
                {{message.from}}
            </td>
            <td>
                {{message.type}}
            </td>
            <td>
                {{#if message.isCameraCommand}}
                    {{message.body.command}}
                {{/if}}
                {{#if message.isImage}}
                    <img {{bindAttr src="message.bodyUrlWithAccessToken"}} width="320" height="240" />
                {{/if}}
                {{#if message.isLog}}
                    {{message.body.severity}}: {{message.body.message}}
                {{/if}}
                {{#if message.isIP}}
                    {{message.body.ip_address}}
                {{/if}}
                {{#if message.isIPMatch}}
                    {{view App.IpMatchView}}
                {{/if}}
            </td>
        </tr>
        {{/if}}

    {{/each}}

</table>
