    {{#linkTo principal principal}}
    <div class="span3">{{principal.id}}</div>
    {{/linkTo}}

    <div class="span2">
{{#if view.editing}}
    {{view Ember.TextField valueBinding="principal.name" classNames="span2"}}
{{else}}
    {{principal.name}}
{{/if}}
